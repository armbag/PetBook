<div class="home">
<div class="container">

  <h1>Get paid to <strong>pet-sit</strong></h1>
    <p>Care for adorable pets while their owners are on vacation and earn extra cash!</p>

  <%= form_tag(pets_path, method: :get) do %>
  <%= label_tag :location %>
  <%= text_field_tag :loaction %>
  <br>
  <br>
  <%= label_tag :cat %>
  <%= radio_button_tag 'species','cat' %>
  <%= label_tag :dog %>
  <%= radio_button_tag 'species','dog' %>

  <br>
  <br>
  <span>Start Date <%= date_field_tag :start %> End Date <%= date_field_tag :end %></span>



  <br>
  <br>
  <%= link_to "See pets", pets_path, class: "btn btn-success" %>
<% end %>
</div>

