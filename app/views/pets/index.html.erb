<div class="container">
  <div class="col-">
    <div class="container">
          <div class="row">

<% @pets.each do |pet| %>
  <%= link_to pet_path(pet) do %>
    <div class="card-trip">
      <%= cl_image_tag(pet.photo) %>
      <div class="card-trip-infos">
        <div>
          <h2><%= pet[:name] %></h2>
          <p><%= pet[:bio] %></p>
        </div>
        <h2 class="card-trip-pricing">$<%= pet[:price] %></h2>
        <%= cl_image_tag(pet.owner.avatar, :width => 40, :height => 40, :crop => :thumb, :gravity => :face, class: "card-trip-user avatar-bordered") %>
      </div>
    </div>
  <% end %>
<% end %>
      
      
          </div>
        </div>
        <br>
        <div
          id="map"
          style="width: 100%;
          height: 600px; background-color: red"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
        <br>
        <br>
        <br>
        <div class="d-flex justify-content-center">
              <% if policy(Pet).create? %>
                <%= link_to "Add a pet", new_pet_path, class: "btn btn-primary"%>
                <% else %>
                <%= link_to "subscribe", new_user_session_path, class: "btn btn-primary" %>
              <% end %>
        </div>




  </div>
</div>


