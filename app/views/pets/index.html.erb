
<% @pets.each do |pet| %>
  <div class="card-trip">
    <%= cl_image_tag(pet.photo) %>
    <div class="card-trip-infos">
      <div>
        <h2><%= pet[:name] %></h2>
        <p><%= pet[:bio] %></p>
      </div>
      <h2 class="card-trip-pricing">$<%= pet[:price] %></h2>
      <%= cl_image_tag(pet.owner.avatar, :width => 40, :height => 40,
             :crop => :thumb, :gravity => :face, class: "card-trip-user avatar-bordered") %>
  </div>
  </div>
<% end %>
