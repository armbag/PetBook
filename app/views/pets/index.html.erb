<div class="container">
  <div class="col-">
    <h1>Welcome!</h1>
    <h1>What pet do you want to take care of ?</h1>



        <div class="container">
          <div class="row">
            <% @pets.each do |pet| %>

              <div class="col-12 col-md-4">
                <div class="m-2">

                          <%= cl_image_tag pet.photo, height: 150, width: 200, crop: :fill %>
                            <p><%=link_to pet.name, pet_path(pet) %></p>
                          <% if policy(pet).destroy? %>
                            <%= link_to 'Delete this pet', pet_path(pet), method: :delete %>
                          <% end %>
                          <%= link_to "Pet this dog!", new_pet_booking_path(pet), class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <br>
        <br>
        <br>
        <br>
        <div class="d-flex justify-content-center">
              <% if policy(Pet).create? %>
                <%= link_to "Add a pet", new_pet_path, class: "btn btn-primary"%>
                <% else %>
                <%= link_to "subscribe", new_user_session_path, class: "btn btn-primary" %>
              <% end %>
        </div>




  </div>
</div>


